# Configuration générale
NODE_ENV=development

# Configuration des services
USER_PREFERENCES_PORT=3001
CONTENT_FEED_PORT=3002
CONTENT_RECOMMENDATION_PORT=3003
USER_AUTHENTICATION_PORT=3004
CONTENT_CATEGORIES_PORT=3005
API_GATEWAY_PORT=3000

# Base de données MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_USER_PREFERENCES_DB=user-preferences
MONGODB_AUTH_DB=auth
MONGODB_RECOMMENDATIONS_DB=recommendations
MONGODB_CATEGORIES_DB=categories

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Keys (pour les sources de contenu externes)
NEWS_API_KEY=your-news-api-key
TWITTER_API_KEY=your-twitter-api-key
FACEBOOK_API_KEY=your-facebook-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
